<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h3>Delete Account</h3>
        <hr>
        <form action="/user/confirm-delete" method="POST">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <h3>Are you sure you want to delete your account?</h3>
            <p class="description">Please enter your email and password to confirm or cancel.</p>
            <div class="form-group">
                <label for="email">E-Mail</label>
                <input placeholder="name@example.com" id="email" name="email" class="form-control" autocomplete="email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control">
            </div>
            <button type="submit" class="btn btn-danger">DELETE</button>
            <button type="submit" class="btn btn-success" formaction="/user/profile" formmethod="GET">CANCEL</button>
        </form>
    </div>
</div>