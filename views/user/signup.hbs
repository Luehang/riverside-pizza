<style>
    .form-group p {
        color: #7f7f7f;
        font-size: 10px;
    }
    .form-group p span {
        color: red;
    }
</style>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>Sign Up</h1>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages }}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        <form action="/user/signup" method="POST">
            <div class="form-group">
                <label for="email">E-Mail</label>
                <p><span>*</span>E-mails are private and are only for easy log in.</p>
                <input placeholder="name@example.com" type="email" id="email" name="email" class="form-control" autocomplete="email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control">
            </div>
            <div class="form-group">
                <label for="password">Confirm Password</label>
                <input type="password" id="password" name="passwordConfirmation" class="form-control">
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <div class="g-recaptcha" data-sitekey="6LcfXzkUAAAAACr9qLUOlCDp-DOa5r3SUgmDXDeB"></div>
            <button type="submit" class="btn btn-success">Sign Up</button>
        </form>
    </div>
</div>
