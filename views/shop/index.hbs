<link rel='stylesheet' href='/stylesheets/home.css'/>
{{#if name}}
    <div class="name-header row">
        <div class="col-xs-12">
            <h3>Hi {{ name }}!</h3>
        </div>
    </div>
{{else}}
    {{#if email}}
        <div class="name-header row">
            <h3>Hi {{ email }}!</h3>
        </div>
    {{/if}}
{{/if}}

<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success {{#if noMessages}}hidden{{/if}}">
            {{ successMsg }}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages }}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
    </div>
</div>

<div class="row">
    <div class="deals-container col-sm-12 col-md-12">
        <a href="/deals">
            <div class="text-deals">
                <span>&#8661;</span>
                <span>DEALS</span>
                <span>&#8661;</span>
            </div>
            <img src="img/pizza1.jpg" alt="..." class="img-responsive" style="width: 100%">
        </a>
    </div>
</div>

<hr>

<div class="row">
    <h1>MENU</h1>
    <div class="menu-container col-xs-12 col-sm-4">
        <a href="/pizza">
            <div class="text-menu">
                <span>Pizza</span>
                <span>&#187</span>
            </div>
            <img src="img/pizza4.jpg" alt="..." class="img-responsive" style="width: 100%">
        </a>
    </div>
    <div class="menu-container col-xs-6 col-sm-4">
        <a href="/chili">
            <div class="text-menu">
                <span>Chili</span>
                <span>&#187</span>
            </div>
            <img src="img/chili.jpg" alt="..." class="img-responsive" style="width: 100%">
        </a>
    </div>
    <div class="menu-container col-xs-6 col-sm-4">
        <a href="/drinks">
            <div class="text-menu">
                <span>Drinks</span>
                <span>&#187</span>
            </div>
            <img src="img/softdrinks.jpg" alt="..." class="img-responsive" style="width: 100%">
        </a>
    </div>
</div>

<hr>

<div class="info-container row">
    <div class="col-xs-12">
        <h4>Location:</h2>
        <p>114 North 8th Street, Manitowoc, Wisconsin 54220 (Just north of Bern-steins) <a href="tel:920-901-3752">920-901-3752</a></p>
        <h4>Hours of Operation (Online/In-store):</h2>
        <p>Call or Order Online.  Pick Up Only.</p>
        <p>Opens Friday-Saturday at 5pm-9pm</p>
    </div>
</div>

<hr>

<div class="slideshow-container row">
    <h1>About Riverside</h1>
    <div class="slides fade col-sm-12 col-md-12">
        <div class="numbertext">1 / 3</div>
        <div class="text">Caption Text</div>
        <img src="img/riverside-pizza.jpg" alt="..." class="img-responsive" style="width: 100%">
    </div>
    <div class="slides fade col-sm-12 col-md-12">
        <div class="numbertext">2 / 3</div>
        <div class="text">Caption Text</div>
        <img src="img/coming-soon.jpg" alt="..." class="img-responsive" style="width: 100%">
    </div>
    <div class="slides fade col-sm-12 col-md-12">
        <div class="numbertext">3 / 3</div>
        <div class="text">Caption Text</div>
        <img src="img/coming-soon.jpg" alt="..." class="img-responsive" style="width: 100%">
    </div>
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a> 
    <a class="next" onclick="plusSlides(1)">&#10095;</a> 
    <div class="dot-container" style="text-align:center">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
    </div>
</div>

<script type="text/javascript" src="javascripts/home.js"></script>


