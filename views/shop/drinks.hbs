<link rel="stylesheet" href="/stylesheets/chili.css">

<h1>DRINKS</h1>

{{# each drinks }}
    <div class="row">
        {{# each this }}
            <div class="col-xs-12 col-sm-6 col-md-6">
                <div class="thumbnail clearfix">
                    <form class="pull-left" style="width: 70%" action="/add-to-cart/{{this._id}}?model=drink" method="POST">
                        <div class="caption">
                            <h3>{{ this.title }}</h3>
                            <p class="description">{{ this.description }}</p>
                        </div>
                        <div class="styled-select">
                            <select id="price" name="price">
                                {{# each this.select }}
                                    <option value="{{price}}">{{size}} ${{price}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="clearfix">
                            <button type="submit" class="btn btn-success pull-right" role="button">Add to Order</button>
                        </div>
                    </form>
                    <div class="pull-right" style="width: 30%">
                        <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}